<h2>New Color</h2>

<% form_for([@product,@color], :html => {:class => 'standard_form'}) do |f| %>
  <%= f.error_messages %>
  <fieldset>
    <legend>Color Details</legend>
    <ul class="form">
      <li>
        <%= f.label :name %>
        <%= f.text_field :name %>
      </li>
    </ul>
  </fieldset>
  <p>
    <%= f.submit 'Create Color' %>
  </p>
<% end %>

<%= link_to 'Back', product_colors_path(@product) %>