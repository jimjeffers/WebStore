<div id="status" class="panel">
  <h2>Listing Users <%= link_to 'New User &gt;&gt;', new_user_path, {:class => 'secondary'} %></h2>
  <ul id="colors" class="line_item_list">
  <% @users.each do |user| %>
    <li><span class="user_name"><%= user.name %></span> <span class="user_email"><%= user.email %></span> <span class="user_roles"><%= user.roles.map{|r| r.name}.join(', ') %></span>
    <%= link_to 'Edit', edit_user_path(user), {:class => 'edit action'} %> <%= link_to 'Destroy', user, {:class => 'action delete'} %></li>
  <% end %>
  </ul>
</div>