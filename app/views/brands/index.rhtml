<div id="status" class="panel">
  <h2>Listing Brands <%= link_to 'New Brand &gt;&gt;', new_brand_path, {:class => 'secondary'} %></h2>
  <ul id="colors" class="line_item_list">
  <% @brands.each do |brand| %>
    <li>
      <%= image_tag brand.logo.url(:thumb), {:class => 'logo'} %>
      <span><%= brand.name %></span> <%= link_to 'Edit', edit_brand_path(brand), {:class => 'edit action'} %> <%= link_to 'Destroy', brand, {:class => 'action delete'} %>
    </li>
  <% end %>
  </ul>
</div>